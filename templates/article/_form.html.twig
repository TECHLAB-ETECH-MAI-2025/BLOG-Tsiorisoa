{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    <div class="space-y-4">
        {% for child in form %}
            {% if 'hidden' not in child.vars.block_prefixes %}
                <div class="form-group">
                    {% set label = child.vars.label %}
                    {% if child.vars.name == 'title' %}
                        {% set label = 'Titre' %}
                    {% elseif child.vars.name == 'content' %}
                        {% set label = 'Contenu' %}
                    {% elseif child.vars.name == 'categorie' %}
                        {% set label = 'Catégorie' %}
                    {% elseif child.vars.name == 'createdAt' %}
                        {% set label = 'Date de création' %}
                    {% endif %}
                    
                    {{ form_label(child, label, {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}
                    }) }}
                    
                    {% if child.vars.block_prefixes.1 == 'textarea' %}
                        {{ form_widget(child, {'attr': {
                            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
                            'rows': 4
                        }}) }}
                    {% else %}
                        {{ form_widget(child, {'attr': {
                            'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
                        }}) }}
                    {% endif %}
                    
                    {{ form_help(child, {'attr': {'class': 'mt-1 text-sm text-gray-500'}}) }}
                    {{ form_errors(child, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>
            {% else %}
                {{ form_widget(child) }}
            {% endif %}
        {% endfor %}
    </div>

    <div class="flex items-center justify-start space-x-4 pt-4">
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {{ button_label|default('Ajouter l\'article') }}
        </button>
    </div>

{{ form_end(form) }}