{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="space-y-6">
        {% for child in form %}
            {% if 'hidden' not in child.vars.block_prefixes %}
                <div class="form-group">
                    {{ form_label(child, null, {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
                    }) }}
                    
                    {% if child.vars.block_prefixes.1 == 'textarea' %}
                        {{ form_widget(child, {'attr': {
                            'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200 h-32 px-4 py-3 border',
                            'rows': 5,
                            'placeholder': 'Entrez une description...'
                        }}) }}
                    {% else %}
                        {{ form_widget(child, {'attr': {
                            'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200 py-3 px-4 border',
                            'placeholder': child.vars.label|default('')
                        }}) }}
                    {% endif %}
                    
                    {{ form_help(child, {'attr': {'class': 'mt-2 text-sm text-gray-500'}}) }}
                    {{ form_errors(child, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
            {% else %}
                {{ form_widget(child) }}
            {% endif %}
        {% endfor %}
    </div>

    <div class="pt-6 border-t border-gray-200">
        <button type="submit" class="{{ button_attr.class|default('w-full px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-all') }}">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            {{ button_label|default('Cr√©er') }}
        </button>
    </div>
{{ form_end(form) }}