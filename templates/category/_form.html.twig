{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        {% for child in form %}
            {% if 'hidden' not in child.vars.block_prefixes %}
                <div class="form-group {% if loop.index > 2 %} sm:col-span-2 {% endif %}">
                    {{ form_label(child, null, {
                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}
                    }) }}
                    
                    {% if child.vars.block_prefixes.1 == 'textarea' %}
                        {{ form_widget(child, {'attr': {
                            'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200 h-32',
                            'rows': 5
                        }}) }}
                    {% else %}
                        {{ form_widget(child, {'attr': {
                            'class': 'mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm transition duration-200 py-3 px-4 border'
                        }}) }}
                    {% endif %}
                    
                    {{ form_help(child, {'attr': {'class': 'mt-2 text-sm text-gray-500'}}) }}
                    {{ form_errors(child, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                </div>
            {% else %}
                {{ form_widget(child) }}
            {% endif %}
        {% endfor %}
    </div>

    <div class="flex flex-col-reverse sm:flex-row sm:justify-between gap-4 pt-6 border-t border-gray-200">
        <button type="submit" class="{{ button_attr.class|default('px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-all') }}">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}